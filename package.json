{
  "name": "serverless-import-plugin",
  "version": "0.0.3",
  "description": "Adds possibility to import YAML files in serverless.yaml config file",
  "main": "dist/src/index.js",
  "files": [
    "dist",
    "src"
  ],
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc --project .",
    "watch": "npm-watch",
    "fmt": "tsfmt"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndrewChubatiuk/serverless-import-plugin.git"
  },
  "keywords": [
    "serverless",
    "plugins",
    "lambda",
    "aws",
    "frontend",
    "serverless.com",
    "serverless.yaml"
  ],
  "author": {
    "name": "Andrew Chubatiuk",
    "email": "andrew.chubatiuk@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AndrewChubatiuk/serverless-import-plugin/issues"
  },
  "homepage": "https://github.com/AndrewChubatiuk/serverless-import-plugin#readme",
  "devDependencies": {
    "@types/node": "^13.1.2",
    "@types/resolve": "^1.14.0",
    "npm-watch": "^0.6.0",
    "typescript": "4.9.5",
    "typescript-formatter": "^7.2.2"
  },
  "peerDependencies": {
    "serverless": "^2.60 || 3"
  },
  "dependencies": {
    "resolve": "^1.14.2"
  }
}
